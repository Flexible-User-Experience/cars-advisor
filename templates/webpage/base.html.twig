<!DOCTYPE html>
<html lang="{{ locale }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="author" content="https://www.flux.cat">
    <meta name="description" content="{{ front_web_title | capitalize }} Asesoría personalizada de compra de vehículos nuevos">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" href="{{ asset('build/apple-touch-icon.png') }}"/>
    <link rel="icon" type="image/png" href="{{ asset('build/favicon-32x32.png') }}" />
    <title>{{ front_web_title | capitalize }}{% block title %} · Asesoría en la compra de vehículos nuevos{% endblock %}</title>
    {{ encore_entry_link_tags('app') }}
</head>
<body class="my-body" data-spy="scroll" data-target="#navbarSupportedContent" data-offset="110">
<nav id="sections-menu" class="navbar fixed-top navbar-expand-lg navbar-light custom-navbar-bg-secondary">
    <div class="container-fluid px-0 px-xl-3">
        <a class="navbar-brand" href="{{ path('app_front_homepage') }}">
            <img src="{{ asset('build/cars_advisor.svg') }}" alt="{{ front_web_title | capitalize }} logo" width="250">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse mr-0" id="navbarSupportedContent">
            {% block menu %}
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link h5 mb-0" href="#home">{{ front_web_title | capitalize }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link h5 mb-0" href="#gestion">{{ 'front.menu.management' | trans | capitalize }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link h5 mb-0" href="#equipo">{{ 'front.menu.team' | trans | capitalize }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link h5 mb-0 pr-0" href="#contacto">{{ 'front.menu.contact' | trans | capitalize }}</a>
                    </li>
                </ul>
            {% endblock %}
        </div>
    </div>
</nav>
{% if app.session.flashbag.peekAll | length > 0 %}
    <div class="container">
        {% for type, messages in app.session.flashbag.all %}
            {% for message in messages %}
                <div class="row">
                    <div class="col">
                        <div class="alert alert-{{ type }} alert-dismissible fade show mt-4 mb-4" role="alert">
                            <i class="cxi-check lead mr-3"></i> {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endif %}
{% block body %}{% endblock %}
<footer class="footer custom-footer-bg-dark py-5 text-white">
    <div class="container">
        <div class="row">
            <div class="col-sm-2">
                <img src="{{ asset('build/cars_advisor_only_letters.svg') }}" alt="{{ front_web_title | capitalize }} logo" class="img-fluid d-block mb-3">
                <i class="fas fa-phone-square"></i> <a class="text-reset text-decoration-none" href="tel:+34655768647">{{ front_web_phone }}</a><br>
                <i class="fas fa-envelope-square"></i> <a class="text-reset text-decoration-none" href="mailto:{{ mailer_destination }}">{{ mailer_destination }}</a>
            </div>
            <div class="col-sm-10 text-right">
                <ul class="list-inline">
                    <li class="list-inline-item">
                        <a class="text-reset text-decoration-none" href="{{ path('app_front_privacy_policy') }}">política de privacidad</a>
                    </li>
                </ul>
                &copy; {{ 'now' | date('Y') }}
            </div>
        </div>
    </div>
</footer>
{{ encore_entry_script_tags('app') }}
</body>
</html>
